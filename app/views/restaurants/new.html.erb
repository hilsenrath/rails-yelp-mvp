  <h1>Include a new AMAZING Restaurant:</h1>

  <%= simple_form_for(@restaurant) do |f| %>

  <% if @restaurant.errors.any? %>
  <div class="errors-container">
    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.button :submit %>

  <% end %>
